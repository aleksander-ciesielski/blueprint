{
  "name": "blueprint",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "author": "Aleksander Ciesielski <contact@aleksanderciesiel.ski>",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dependencies:upgrade": "ncu --upgrade --root --workspaces --target minor --packageManager npm && npm i",
    "dev:client": "turbo run dev --filter @blueprint/client",
    "dev:server": "turbo run dev --filter @blueprint/server",
    "lint": "eslint packages/**/src/**/* --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint packages/**/src/**/* --ext .ts,.tsx --max-warnings 0 --fix && format-package --write package.json packages/*/package.json",
    "prepare": "husky install",
    "start:client": "turbo run start --filter @blueprint/client",
    "start:server": "turbo run start --filter @blueprint/server",
    "test:integration": "jest --config jest.config.integration.js",
    "test:unit": "jest --config jest.config.unit.js"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "14.2.8",
    "@storybook/addon-essentials": "8.2.9",
    "@storybook/addon-interactions": "8.2.9",
    "@storybook/addon-links": "8.2.9",
    "@storybook/addon-onboarding": "8.2.9",
    "@storybook/addon-styling": "1.3.6",
    "@storybook/blocks": "8.2.9",
    "@storybook/react": "8.2.9",
    "@storybook/react-vite": "8.2.9",
    "@storybook/testing-library": "0.2.2",
    "@types/node": "20.16.5",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "babel-plugin-transform-typescript-metadata": "0.3.2",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-plugin-import": "2.30.0",
    "eslint-plugin-only-warn": "1.1.0",
    "eslint-plugin-react": "7.35.2",
    "eslint-plugin-storybook": "0.8.0",
    "format-package": "7.0.0",
    "git-branch-is": "4.0.0",
    "husky": "9.1.5",
    "jest": "29.7.0",
    "npm-check-updates": "16.14.20",
    "storybook": "^8.2.9",
    "turbo": "1.13.4",
    "typescript": "5.5.4",
    "vite": "5.4.3",
    "vite-tsconfig-paths": "4.3.2",
    "merge-options": "3.0.4",
    "jest-extended": "4.0.2",
    "@babel/plugin-proposal-class-properties": "7.18.6"
  }
}
